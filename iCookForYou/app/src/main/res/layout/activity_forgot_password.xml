<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fr.univ_littoral.nathan.myapplication.ConnectionActivity"
    android:orientation="vertical"
    android:background="#2c2d30">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Mot de passe oublié ?"
                android:textColor="#fff"
                android:ems="10"
                android:textSize="30sp"
                android:layout_marginTop="50dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Veuillez entrer votre adresse mail pour recevoir un email de récupération de votre mot de passe"
                android:textColor="#fff"
                android:textSize="18sp"
                android:layout_marginTop="40dp"/>

            <EditText
                android:id="@+id/recoverMail"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_email_white_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Adresse mail"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColorHint="#fff"
                android:textColor="#fff"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#fff"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/recoverPasswordButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_signup"
                    android:text="Récupérer mon mot de passe"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:padding="16dp"
                    android:clickable="true"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_marginTop="24dp"
                    android:textSize="18sp"
                    />

                <Button
                    android:id="@+id/cancelButtonForgot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_signup"
                    android:text="Annuler"
                    android:textColor="#fff"
                    android:textAllCaps="false"
                    android:padding="18dp"
                    android:clickable="true"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_marginTop="24dp"
                    android:layout_marginLeft="24dp"
                    android:textSize="18sp"
                    />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>


</LinearLayout>