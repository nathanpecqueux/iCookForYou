<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/ingredient_list_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            tools:text="Quantity"
            android:textColor="#FFFF"
            />

        <TextView
            android:id="@+id/ingredient_list_unity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ingredient_list_quantity"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:textSize="18sp"
            tools:text="Unity"
            android:textColor="#FFFF"
            />

        <TextView
            android:id="@+id/ingredient_list_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/ingredient_list_unity"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="16sp"
            tools:text="Name"
            android:textColor="#FFFF"
            />

        <EditText
            android:paddingLeft="4dp"
            android:layout_marginLeft="8dp"
            android:id="@+id/ingredient_list_delete_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ingredient_list_name"
            android:layout_toRightOf="@+id/ingredient_list_name"
            android:layout_marginRight="10dp"
            android:textColor="#FFFF" />

        <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_toRightOf="@+id/ingredient_list_delete_quantity"
        android:background="@drawable/delete_button"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            />
    </RelativeLayout>
</RelativeLayout>
